    <Button
        android:id="@+id/buttonResetColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="113dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Reset Color"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNewColor"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:layout_constraintVertical_bias="0.081"
        app:strokeColor="#b5b5b5"
        app:strokeWidth="3dp" />

    <EditText
        android:id="@+id/edittextRed"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:background="#b5b5b5"
        android:inputType="phone"
        android:hint="R"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <EditText
        android:id="@+id/edittextGreen"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:background="#b5b5b5"
        android:inputType="phone"
        android:hint="G"
        app:layout_constraintStart_toEndOf="@+id/edittextRed"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <EditText
        android:id="@+id/edittextBlue"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:background="#b5b5b5"
        android:inputType="phone"
        android:hint="B"
        app:layout_constraintStart_toEndOf="@+id/edittextGreen"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <Button
        android:id="@+id/buttonNewColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="113dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Set Color"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:layout_constraintVertical_bias="0.081"
        app:strokeColor="#b5b5b5"
        app:strokeWidth="3dp" />

